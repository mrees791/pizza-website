@using PizzaWebsite.Models.ManageMenuImages
@model UploadMenuImageFormViewModel
@* Functionality requires a JavaScript call to pizzaSiteManageMenuImageNs.initializeManagePizzaBuilderImageSection *@
<div>
    <h3>@Model.Name</h3>
    <p>@Model.Description</p>
    <div id="@Model.DropAreaId">
        <input type="file" title="Upload File...">
    </div>
    <p id="@Model.ErrorMessageId" class="text-danger" style="display: none;"></p>
    <img id="@Model.ImageId" src="@Model.ImageUrl" alt="Missing Image" class="manage-menu-image" />
</div>