@* Functionality requires a JavaScript call to pizzaSiteManageMenuImageNs.initializeManageMenuIconSection *@
@using PizzaWebsite.Models.ManageMenuImages
@model ManagePizzaMenuIngredientImagesViewModel
<div>
    <h3>Menu Icon</h3>
    <p>@Model.MenuIconDescription</p>
    <div id="menuIconDropArea">
        <input type="file" title="Upload File...">
    </div>
    <p id="menuIconError" class="text-danger" style="display: none;"></p>
    <img id="menuIcon" src="@Model.MenuIconUrl" alt="Missing Menu Icon" class="manage-menu-image" />
</div>