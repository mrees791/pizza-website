@model PizzaWebsite.Models.PizzaBuilderViewModel

@* This partial view must be placed inside a POST form. *@

<div class="form-group">
    @Html.LabelFor(model => model.PizzaCrustList, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.SelectedPizzaCrustId, new SelectList(Model.PizzaCrustList.Select(t => t), "Id", "Name"))
        @Html.ValidationMessageFor(model => model.PizzaCrustList, "", new { @class = "text-danger" })
    </div>
</div>