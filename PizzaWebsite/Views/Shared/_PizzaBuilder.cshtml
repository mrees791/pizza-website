<h4>Toppings</h4>
<h5>Meats</h5>
@for (int iTopping = 0; iTopping < Model.ToppingList.Count; iTopping++)
{
    PizzaToppingViewModel topping = Model.ToppingList[iTopping];
    if (topping.Category == "Meats")
    {
        @Html.Partial("_PizzaBuilderTopping", topping)
    }
}
