@using PizzaWebsite.Models.ManageWebsite
@model ViewEmployeeLocationsViewModel

@{
    ViewBag.Title = "Employee Locations";
}

<h2>@ViewBag.Title</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ManageWebsite")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ManageEmployees")?@Request.QueryString">Manage Employees</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>
<hr />
<h3>@Model.EmployeeId Locations</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemViewModel.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemViewModel.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemViewModel.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemViewModel.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemViewModel.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemViewModel.IsActiveLocation)
        </th>
    </tr>
    @foreach (var item in Model.EmployeeLocationVmList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActiveLocation)
            </td>
        </tr>
    }
</table>