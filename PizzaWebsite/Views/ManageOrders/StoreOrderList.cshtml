@using PizzaWebsite.Models
@using PizzaWebsite.Models.ManageOrders
@model StoreOrderListViewModel
@{
    ViewBag.Title = "Orders";
}
<h2>@ViewBag.Title</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Employee")">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "ManageOrders")?@Model.StoreSearchQueryString">Search Stores</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>
<hr />
<div>
    @using (Html.BeginForm("Store", "ManageOrders", FormMethod.Get))
    {
        @Html.Hidden("Page", Request["Page"])
        @Html.Hidden("RowsPerPage", Request["RowsPerPage"])
        @Html.Hidden("Name", Request["Name"])
        @Html.Hidden("PhoneNumber", Request["PhoneNumber"])
        <input type="hidden" name="OrdersPage" value="1" />
        @Html.Hidden("OrdersRowsPerPage", Request["OrdersRowsPerPage"])
        @Html.Label("OrdersUserId", "User ID")
        @Html.TextBox("OrdersUserId", Request["OrdersUserId"], new { @class = "form-control" })
        <input type="submit" value="Apply Search Filters" class="btn btn-primary" />
    }
</div>
<table class="table">
    <thead>
        <tr>
            @* Table headers for controls columns. *@
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.OrderListItemVm.SelectedOrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderVm.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderVm.DateOrderPlaced)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderVm.OrderType)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (OrderListItemViewModel orderVm in Model.OrderListItemVmList)
        {
            <tr>
                <td>
                    <a href="@Url.Action("ViewOrder")/@orderVm.CustomerOrderVm.Id?@(Request.QueryString)">
                        <input type="button" value="View" class="btn btn-primary" />
                    </a>
                </td>
                <td>
                    @Html.DropDownListFor(model => orderVm.SelectedOrderStatus, new SelectList(orderVm.OrderStatusListItems, "Value", "Text", orderVm.SelectedOrderStatus),
                        new {@class = "form-control"})
                </td>
                <td>
                    @Html.DisplayFor(model => orderVm.CustomerOrderVm.UserId)
                </td>
                <td>
                    @Html.DisplayFor(model => orderVm.CustomerOrderVm.DateOrderPlaced)
                </td>
                <td>
                    @Html.DisplayFor(model => orderVm.CustomerOrderVm.OrderType)
                </td>
            </tr>
        }
    </tbody>
</table>
<nav>
    <ul id="managePagination" class="pagination">
    </ul>
</nav>
@section Scripts {
    <script type="text/javascript">
        $(function() {
            pizzaSiteNs.createPaginationCustomized('#managePagination', @Model.PaginationVm.CurrentPage, @Model.PaginationVm.RowsPerPage, @Model.PaginationVm.TotalPages, @Model.PaginationVm.TotalNumberOfItems, 'OrdersPage');
        });
    </script>
}