@using PizzaWebsite.Models.ManageStores
@model RemoveEmployeeFromRosterViewModel
@{
    ViewBag.Title = "Remove From Roster";
}
<h2>Remove From Roster</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Employee")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ManageStores")?@Request.QueryString">Manage Stores</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("EmployeeRoster", "ManageStores")/@(Model.StoreId)?@Request.QueryString">Employee Roster</a></li>
        <li class="breadcrumb-item active" aria-current="page">Remove From Roster</li>
    </ol>
</nav>
<hr />
<div>
    <p>Are you sure you want to remove @Model.EmployeeId from @(Model.StoreName)'s roster?</p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EmployeeLocationId)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm Removal" class="btn btn-danger" />
            </div>
        </div>
    </div>
}