                    </label>
                    <label class="col-xs-3 col-sm-4 col-md-3">
                        <input type="radio" id="sauce-3" name="sauceGroup" value="3" pb-img-src="~/Content/Images/PizzaBuilderTest/Sauce/bbq-pb.webp" />
                        <div class="pb-menu-icon" style="background-image: url('/Content/Images/PizzaBuilderTest/Sauce/bbq-mi.webp')"></div>
                        <i>BBQ</i>
                    </label>
                    <label class="col-xs-3 col-sm-4 col-md-3">
                        <input type="radio" id="sauce-4" name="sauceGroup" value="4" pb-img-src="~/Content/Images/PizzaBuilderTest/Sauce/parmesan-pb.webp" />
                        <div class="pb-menu-icon" style="background-image: url('/Content/Images/PizzaBuilderTest/Sauce/parmesan-mi.webp')"></div>
                        <i>Parmesan</i>
                    </label>
                </fieldset>
                <fieldset id="sauce-amount-fieldset" class="row equal">
                    <legend class="col-xs-12">Amount</legend>
                    <label class="col-xs-12 col-sm-3 text-only-label">
                        <input type="radio" name="sauceAmountGroup" value="extra" />
                        <div class="text-only">
                            <i>Extra</i>
                        </div>
                    </label>
                    <label class="col-xs-12 col-sm-3 text-only-label">
                        <input type="radio" name="sauceAmountGroup" value="regular" checked />
                        <div class="text-only">
                            <i>Regular</i>
                        </div>
                    </label>
                    <label class="col-xs-12 col-sm-3 text-only-label">
                        <input type="radio" name="sauceAmountGroup" value="light" />
                        <div class="text-only">
                            <i>Light</i>
                        </div>
                    </label>
                    <label class="col-xs-12 col-sm-3 text-only-label">
                        <input type="radio" name="sauceAmountGroup" value="none" />
                        <div class="text-only">
                            <i>None</i>
                        </div>
                    </label>
                </fieldset>
                <fieldset id="cheese-fieldset" class="row equal">
                    <legend class="col-xs-12">Cheese</legend>
                    <label class="col-xs-3 col-sm-4 col-md-3">
                        <input type="radio" id="cheese-1" name="cheeseGroup" value="1" pb-img-src="~/Content/Images/PizzaBuilderTest/Cheese/regular-cheese-pb.webp" checked />
                        <div class="pb-menu-icon" style="background-image: url('/Content/Images/PizzaBuilderTest/Cheese/regular-cheese-mi.webp')"></div>
                        <i>Regular Cheese</i>
                    </label>
                    <label class="col-xs-3 col-sm-4 col-md-3">
                        <input type="radio" id="cheese-2" name="cheeseGroup" value="2" pb-img-src="~/Content/Images/PizzaBuilderTest/Cheese/spicy-cheese-pb.webp" />
