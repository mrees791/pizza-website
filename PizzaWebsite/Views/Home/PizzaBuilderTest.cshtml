            <!-- Crust, sauce, cheese menu -->
            <div id="pb-crust-sauce-cheese-menu" class="pb-menu-section" style="display: none;">
                <fieldset id="crust-fieldset" class="row equal">
                    <legend class="col-xs-12">Crust</legend>
                    <label class="col-xs-3 col-sm-4 col-md-3">
                        <input type="radio" id="crust-1" name="crustGroup" value="1" pb-img-src="~/Content/Images/PizzaBuilderTest/Crust/hand-tossed-pb.webp" checked />
                        <div class="pb-menu-icon" style="background-image: url('/Content/Images/PizzaBuilderTest/Crust/hand-tossed-mi.webp')"></div>
                        <i>Hand Tossed</i>
                    </label>
                    <label class="col-xs-3 col-sm-4 col-md-3">
                        <input type="radio" id="crust-2" name="crustGroup" value="2" pb-img-src="~/Content/Images/PizzaBuilderTest/Crust/thin-pb.webp" />
                        <div class="pb-menu-icon" style="background-image: url('/Content/Images/PizzaBuilderTest/Crust/thin-mi.webp')"></div>
                        <i>Thin</i>
                    </label>
                    <label class="col-xs-3 col-sm-4 col-md-3">
                        <input type="radio" id="crust-3" name="crustGroup" value="3" pb-img-src="~/Content/Images/PizzaBuilderTest/Crust/stuffed-pb.webp" />
                        <div class="pb-menu-icon" style="background-image: url('/Content/Images/PizzaBuilderTest/Crust/stuffed-mi.webp')"></div>
                        <i>Extra Thick</i>
                    </label>
                    <label class="col-xs-3 col-sm-4 col-md-3">
                        <input type="radio" id="crust-4" name="crustGroup" value="4" pb-img-src="~/Content/Images/PizzaBuilderTest/Crust/pan-pb.webp" />
                        <div class="pb-menu-icon" style="background-image: url('/Content/Images/PizzaBuilderTest/Crust/pan-mi.webp')"></div>
                        <i>Super Pan</i>
                    </label>
                </fieldset>
                <fieldset id="size-fieldset" class="row equal">
                    <legend class="col-xs-12">Size</legend>
                    <label class="col-xs-12 col-sm-4 text-only-label">
                        <input type="radio" name="sizeGroup" value="large" checked />
                        <div class="text-only">
                            <i>Large</i>
                            <i>8 Slices</i>
                        </div>
                    </label>
                    <label class="col-xs-12 col-sm-4 text-only-label">
                        <input type="radio" name="sizeGroup" value="medium" />
                        <div class="text-only">
                            <i>Medium</i>
                            <i>8 Slices</i>
                        </div>
                    </label>
                    <label class="col-xs-12 col-sm-4 text-only-label">
                        <input type="radio" name="sizeGroup" value="small" />
                        <div class="text-only">
                            <i>Small</i>
                            <i>6 Slices</i>
                        </div>
                    </label>
                </fieldset>
                <fieldset id="sauce-fieldset" class="row equal">
                    <legend class="col-xs-12">Sauce</legend>
                    <label class="col-xs-3 col-sm-4 col-md-3">
                        <input type="radio" id="sauce-1" name="sauceGroup" value="1" pb-img-src="~/Content/Images/PizzaBuilderTest/Sauce/marinara-pb.webp" checked />
                        <div class="pb-menu-icon" style="background-image: url('/Content/Images/PizzaBuilderTest/Sauce/marinara-mi.webp')"></div>
                        <i>Marinara</i>
                    </label>
                    <label class="col-xs-3 col-sm-4 col-md-3">
                        <input type="radio" id="sauce-2" name="sauceGroup" value="2" pb-img-src="~/Content/Images/PizzaBuilderTest/Sauce/buffalo-pb.webp" />
