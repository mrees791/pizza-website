@{
    ViewBag.Title = "Pizza Builder Test";
}
<h2 id="pb-header">Pizza Builder Test</h2>
<div id="pizza-builder">
    <div class="container">
        <div class="row">
            <div class="col-sm-3 hidden-xs">
                <div id="pizza-builder-image-section">
                    <div id="crust-layer">
                        <img src="~/Content/Images/PizzaBuilderTest/Crust/hand-tossed-pb.webp" menu-id="1" />
                        <img src="~/Content/Images/PizzaBuilderTest/Crust/pan-pb.webp" menu-id="2" />
                        <img src="~/Content/Images/PizzaBuilderTest/Crust/stuffed-pb.webp" menu-id="3" />
                        <img src="~/Content/Images/PizzaBuilderTest/Crust/thin-pb.webp" menu-id="4" />
                    </div>
                    <div id="sauce-layer">
                        <img src="~/Content/Images/PizzaBuilderTest/Sauce/bbq-pb.webp" menu-id="1" />
                        <img src="~/Content/Images/PizzaBuilderTest/Sauce/buffalo-pb.webp" menu-id="2" />
                        <img src="~/Content/Images/PizzaBuilderTest/Sauce/parmesan-pb.webp" menu-id="3" />
                        <img src="~/Content/Images/PizzaBuilderTest/Sauce/marinara-pb.webp" menu-id="4" />
                    </div>
                    <div id="topping-layer">
                        <div menu-id="1">
                            <img src="~/Content/Images/PizzaBuilderTest/Topping/pepperoni-pb.webp" class="regular-topping"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-9 col-xs-12">
                <div id="pizza-builder-menu-section">
                    @for (int i = 1; i <= 50; i++)
                    {
                        <p>@i</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(function () {
            pizzaSitePizzaBuilderNs.initializePizzaBuilder();
        });
    </script>
}